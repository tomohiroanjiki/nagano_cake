<h1>注文履歴一覧</h1>
<table>
  <tr>
    <th>注文日</th>
    <th>配達先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>注文詳細</th>
    </br>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= l order.created_at %></td>
    <td>
      <%= order.delivery_address %>
      <%= order.postal_code %>
      <%= order.full_name %>
    </td>
    <td>
      <% order.order_items.each do |order_item| %>
      <%= order_item.item.name %><br>
      <% end %>
    </td>
    <td><%= order.billing_amount %></td>
    <td><%= link_to "注文履歴詳細", order_path(order.id) %></td>
  </tr>
  <% end %>
</table>