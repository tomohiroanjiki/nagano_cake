<h1>注文情報確認</h1>
<% @sum = 0 %>
<% @cart_items.each do |cart_item| %>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
</table>
<table >
  <tr>
    <th><%= cart_item.item.name %></th>
    <th><%= (cart_item.item.price * 1.1).round %></th>
    <th><%= cart_item.amount %></th>
    <th><%= ((cart_item.amount * cart_item.item.price) * 1.1).round %></th>
    <th><% @sum = @sum + cart_item.amount * (cart_item.item.price * 1.1) %></th>
  </tr>
</table>
<% end %>
<table>
  <tr>
    <th>送料 <%= @order.shipping %></th>
  </tr>
  <tr>
    <th>商品合計 <%= @sum.round %></th>
  </tr>
  <tr>
    <th>請求額 <%= @sum = @order.shipping + @sum.round %></th>
  </tr>
</table>
</br>
<h2>支払方法</h2>
  <%= @order.payment_method %>
</br>
<h3>お届け先</h3>
  <%= @order.postal_code %>
  <%= @order.delivery_address %>
</br>
  <%= @order.full_name %>
<%= form_with model:@order, local:true do |f| %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :delivery_address, :value => @order.delivery_address %>
  <%= f.hidden_field :full_name, :value => @order.full_name %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :billing_amount, :value => @sum %>
  <%= f.submit "注文を確定する" %>
<% end %>

