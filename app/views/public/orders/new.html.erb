<h1>注文情報入力</h1>
<h2>支払い方法</h2>
<%= form_with model:@order, url: oders_confirm_path, local:true do |f| %>
  <%= f.radio_button :payment_method, "クレジットカード"  %>
  <%= f.label :payment_method, "クレジットカード" %>
  </br>
  <%= f.radio_button :payment_method, "銀行振込"  %>
  <%= f.label :payment_method, "銀行振込" %>
  </br>
  <h2>お届け先</h2>
  <%= f.radio_button :delivery_address, "ご自身の住所" %>
  <%= f.label :delivery_address, "ご自身の住所" %>
  <%= @customer.postal_code %>
  <%= @customer.address %>
  <%= @customer.last_name %>
  <%= @customer.first_name %>
  </br>
  <%= f.radio_button :delivery_address, "登録済み住所から選択"  %>
  <%= f.label :delivery_address, "登録済み住所から選択" %>
  <%= f.collection_select(:address, @address, :id, :id) %>
  </br>
  <%= f.radio_button :delivery_address, "新しいお届け先" %>
  <%= f.label :delivery_address, "新しいお届け先" %>
  </br>
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %>
  </br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  </br>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  </br>

  <%= f.submit "確認画面へ進む" %>
<% end %>
