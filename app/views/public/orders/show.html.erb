<h1>注文履歴詳細</h1>
<span>注文情報</span>
<table>
  <tr>
    <td>注文日</td>
    <td><%= l @order.created_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      <%= @order.postal_code %>
      </br>
      <%= @order.delivery_address %>
      </br>
      <%= @order.full_name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td></td>
  </tr>
</table></br>

<span>注文内容</span>
<table>
  <tr>
    <td>商品</td>
    <td>単価（税込）</td>
    <td>個数</td>
    <td>小計</td>
  </tr>
  <% @order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.item.name %></td>
    <td><%= order_item.price.to_s(:delimited) %></td>
    <td><%= order_item.amount %></td>
    <td><%= order_item.amount * order_item.price %></td>
    <!--.to_s(:delimited)-->
  </tr>
  <% end %>
</table></br>

<span>請求情報</span>
<table>
  <% @sum = 0 %>
  <% @order_items.each do |order_item| %>
    <% @sum = @sum + order_item.amount * order_item.price %>
  <% end %>
  <tr>
    <td>商品合計</td>
    <td><%= @sum.to_s(:delimited) %></td>
  </tr>
  <tr>
    <td>配達送料</td>
    <td><%= @order.shipping %></td>
  </tr>
  <tr>
    <td>ご請求金額</td>
    <td><%= @sum + @order.shipping %></td>
    <!--.to_s(:delimited)-->
  </tr>
</table>

