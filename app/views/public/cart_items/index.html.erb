<h1>ショッピングカート</h1>
<span><%= button_to "カートを空にする", cart_items_path, method: :delete %></span>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <tr>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
    <%= form_with model:cart_item,url:cart_item_path(cart_item), local:true do |f| %>
    <th>
      <%= attachment_image_tag cart_item.item, :image %>
      <%= cart_item.item.name %>
    </th>
    <th><%= (cart_item.item.price * 1.1).round %></th>

    <!--<select name = "amount" >-->
    <!--<% range = 1..cart_item.amount %>-->
    <!--<% range.each do |nun| %>-->
    <!--<option value = nun ><%= nun %></option>-->
    <!--<% end %>-->
    <!--</select>-->

    <th><%= f.select :amount, [["1", "1"], ["2", "2"], ["3", "3"], ["4", "4"]] %><%= f.submit "変更" %></th>
    <th><%= cart_item.amount * (cart_item.item.price * 1.1).round %></th>
    <% @sum = @sum + cart_item.amount * (cart_item.item.price * 1.1).round %>
    <th><%= link_to "消去", cart_item_path(cart_item), method: :delete %></th>
    </br>

    <% end %>
    <% end %>
  </tr>
</table>
<%= link_to "買い物を続ける", items_path %>
<span>合計金額</span>
<span><%= @sum.to_s(:delimited) %></span>
</br>
</br>
<%= link_to "情報入力に進む", new_order_path %>