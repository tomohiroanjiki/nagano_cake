<h1><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h1>
<table>
  <tr>
    <tb>会員ID</tb>
    <tb><%= @customer.id %></tb>
  </tr>
</table>
<%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
  <table>
    <tr>
      <tb>氏名</tb>
      <tb><%= f.text_field :last_name %></tb>
      <tb><%= f.text_field :first_name %></tb>
    </tr>
    </br>
    <tr>
      <tb>フリガナ</tb>
      <tb><%= f.text_field :last_name_kana %></tb>
      <tb><%= f.text_field :first_name_kana %></tb>
    </tr>
    </br>
    <tr>
      <tb>郵便番号</tb>
      <tb><%= f.text_field :postal_code %></tb>
    </tr>
    </br>
    <tr>
      <tb>住所</tb>
      <tb><%= f.text_field :address %></tb>
    </tr>
    </br>
    <tr>
      <tb>電話番号</tb>
      <tb><%= f.text_field :telephone_number %></tb>
    </tr>
    </br>
    <tr>
      <tb>メールアドレス</tb>
      <tb><%= f.text_field :email %></tb>
    </tr>
    </br>
    <tr>
      <tb>会員ステータス</tb>
      <%= form_with model:@customer, local:true do |f| %>
      <td>
        <%= f.radio_button :is_active, "有効" %>
        <%= f.label :is_active, "有効" %>
      </td>
      <td>
        <%= f.radio_button :is_active, "退会" %>
        <%= f.label :is_active, "退会" %>
      </td>
      <% end %>
    </tr>
  </table>
  <%= f.submit "編集を保存" %>
<% end %>