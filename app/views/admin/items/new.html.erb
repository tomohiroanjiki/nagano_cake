<h1>商品新規登録画面</h1>
<%= form_with model: [:admin,@item], url: admin_items_path, local:true do |f| %>
<table>
  <tr>
    <th>商品画像</th>
    <th><%= f.attachment_field :image %></th>
  </tr>
  <tr>
    <th>商品名</th>
    <th><%= f.text_field :name %></th>
  </tr>
  <tr>
    <th>商品説明文</th>
    <th><%= f.text_area :introduction %></th>
  </tr>
  <tr>
    <th>ジャンル</th>
    <th><%= f.text_field :genre_id %></th>
  </tr>
  <tr>
    <th>税抜き価格</th>
    <th><%= f.text_field :price, data: { autonumeric: true } %>円</th>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <th></th>
  </tr>
</table><br>
<%= f.submit '新規登録' %>
<% end %>