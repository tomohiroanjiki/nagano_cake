<h1>注文履歴詳細</h1>
<table>
  <tr>
    <th>購入者</th>
    <td><%= @order.full_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= l @order.created_at %></td>
  </tr>
  <tr>
    <th>配達先</th>
    <td>〒<%= @order.postal_code %><%= @order.delivery_address %></br>
    <%= @order.full_name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
</table>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
  </tr>

  <% @order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.item.name %></td>
    <td><%= order_item.price %></td>
    <td><%= order_item.amount %></td>
    <td><%= order_item.price * order_item.amount %></td>
    <td><% @sum = @sum + order_item.price * order_item.amount %></td>
  </tr>
  <% end %>
</table>
<table>
  <tr>
    <th>商品合計</th><td><%= @sum %></td>
    <th>送料</th><td><%= @order.shipping %></td></br>
    <th>請求金額合計</th><td><%= @sum + @order.shipping %></td>
  </tr>
</table>
